<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    tools:context=".VideoRoom">

    <!-- Video local en pantalla completa -->
    <FrameLayout
        android:id="@+id/local_video_view_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Video remoto en miniatura -->
    <FrameLayout
        android:id="@+id/remote_video_view_container"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Información de la sala -->
    <TextView
        android:id="@+id/tv_room_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/remote_video_view_container"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Controles inferiores con diseño redondeado -->
    <LinearLayout
        android:id="@+id/controls_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/rounded_toolbar"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón de cámara -->
        <ImageButton
            android:id="@+id/btn_toggle_camera"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/circular_button_background_green"
            android:src="@drawable/ic_camera_on"
            android:contentDescription="@string/toggle_camera"
            android:padding="10dp"
            android:layout_marginEnd="16dp" />

        <!-- Botón de micrófono -->
        <ImageButton
            android:id="@+id/btn_toggle_mic"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/circular_button_background_blue"
            android:src="@drawable/ic_mic_on"
            android:contentDescription="@string/toggle_mic"
            android:padding="10dp"
            android:layout_marginEnd="16dp" />

        <!-- Botón de colgar -->
        <ImageButton
            android:id="@+id/btn_hang_up"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/circular_button_background_red"
            android:src="@drawable/ic_hang_up"
            android:contentDescription="@string/hang_up"
            android:padding="10dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
